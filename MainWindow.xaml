<Window x:Class="ModernModTranslator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Universal Mod Translator" Height="650" Width="900"
        WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="BgColor" Color="#1E1E24"/>
        <SolidColorBrush x:Key="PanelColor" Color="#2B2B36"/>
        <SolidColorBrush x:Key="AccentColor" Color="#6C63FF"/>
        <SolidColorBrush x:Key="AccentHoverColor" Color="#837DFF"/>
        <SolidColorBrush x:Key="TextColor" Color="#EEEEEE"/>
        <SolidColorBrush x:Key="TextDimColor" Color="#AAAAAA"/>

        <Style TargetType="Button" x:Key="ModernBtn">
            <Setter Property="Background" Value="{StaticResource PanelColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3E3E4A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="ActionBtn" BasedOn="{StaticResource ModernBtn}">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentHoverColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="{StaticResource PanelColor}"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BgColor}" CornerRadius="20" Padding="25">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="10" Opacity="0.6" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" MouseDown="TopBar_MouseDown" Background="Transparent">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="UNIVERSAL" Foreground="White" FontWeight="Bold" FontSize="18"/>
                    <TextBlock Text=" MOD TRANSLATOR" Foreground="{StaticResource AccentColor}" FontWeight="Bold" FontSize="18"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="—" Width="40" Height="30" Click="BtnMinimize_Click" Style="{StaticResource ModernBtn}" Background="Transparent"/>
                    <Button Content="✕" Width="40" Height="30" Click="BtnClose_Click" Style="{StaticResource ModernBtn}" Background="Transparent" Foreground="#FF5555"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="ÇALIŞMA MODU" Foreground="{StaticResource TextDimColor}" FontSize="11" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbMode" SelectionChanged="CmbMode_SelectionChanged">
                        <ComboBoxItem Content="Tek Mod Dosyası (.jar)" IsSelected="True"/>
                        <ComboBoxItem Content="Mod Paketi (Klasör)"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="HEDEF DİL" Foreground="{StaticResource TextDimColor}" FontSize="11" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbLanguage" SelectedValuePath="Tag">
                        <ComboBoxItem Content="Türkçe (Turkish)" Tag="tr" IsSelected="True"/>
                        <ComboBoxItem Content="İngilizce (English)" Tag="en"/>
                        <ComboBoxItem Content="Almanca (German)" Tag="de"/>
                        <ComboBoxItem Content="Fransızca (French)" Tag="fr"/>
                        <ComboBoxItem Content="İspanyolca (Spanish)" Tag="es"/>
                        <ComboBoxItem Content="İtalyanca (Italian)" Tag="it"/>
                        <ComboBoxItem Content="Rusça (Russian)" Tag="ru"/>
                        <ComboBoxItem Content="Portekizce (Portuguese)" Tag="pt"/>
                        <ComboBoxItem Content="Japonca (Japanese)" Tag="ja"/>
                        <ComboBoxItem Content="Korece (Korean)" Tag="ko"/>
                        <ComboBoxItem Content="Azerbaycan Türkçesi" Tag="az"/>
                    </ComboBox>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnSec" Content="DOSYA SEÇ" Click="BtnSec_Click" Style="{StaticResource ModernBtn}" Height="45"/>
                    <TextBlock x:Name="txtYol" Grid.Column="1" Text="Lütfen seçim yapınız..." VerticalAlignment="Center" Margin="20,0,0,0" Foreground="{StaticResource TextDimColor}" FontStyle="Italic" TextTrimming="CharacterEllipsis"/>
                </Grid>
                <TextBlock x:Name="txtInfo" Text="" Foreground="{StaticResource AccentColor}" Margin="0,5,0,0" HorizontalAlignment="Right" FontWeight="Bold"/>
            </StackPanel>

            <Border Grid.Row="3" Background="{StaticResource PanelColor}" CornerRadius="12" Padding="10" Margin="0,0,0,15">
                <ScrollViewer x:Name="scrlLog" VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="txtLog" Text="Sistem hazır..." Foreground="{StaticResource TextDimColor}" FontFamily="Consolas" TextWrapping="Wrap" FontSize="13"/>
                </ScrollViewer>
            </Border>

            <StackPanel x:Name="pnlTotalProgress" Grid.Row="4" Margin="0,0,0,10" Visibility="Collapsed">
                <Grid Margin="0,0,0,5">
                    <TextBlock Text="GENEL DURUM" Foreground="White" FontSize="10" FontWeight="Bold"/>
                    <TextBlock x:Name="txtTotalYuzde" Text="0 / 0" HorizontalAlignment="Right" Foreground="White" FontSize="10" FontWeight="Bold"/>
                </Grid>
                <ProgressBar x:Name="progTotal" Height="10" Value="0" Maximum="100" Foreground="{StaticResource AccentColor}"/>
            </StackPanel>

            <StackPanel Grid.Row="5" Margin="0,0,0,5">
                <Grid Margin="0,0,0,5">
                    <TextBlock x:Name="txtCurrentStatus" Text="Dosya Durumu" Foreground="{StaticResource TextDimColor}" FontSize="11"/>
                    <TextBlock x:Name="txtCurrentYuzde" Text="%0" HorizontalAlignment="Right" Foreground="{StaticResource TextDimColor}" FontSize="11"/>
                </Grid>
                <ProgressBar x:Name="progCurrent" Height="6" Value="0" Maximum="100" Opacity="0.8"/>
            </StackPanel>

            <Button x:Name="btnBaslat" Grid.Row="6" Content="ÇEVİRİYİ BAŞLAT" Click="BtnBaslat_Click" Style="{StaticResource ActionBtn}" Margin="0,10,0,0" Height="50" IsEnabled="False"/>
        </Grid>
    </Border>
</Window>